{
  "dxt_version": "0.2",
  "name": "@cjavdev/believe-mcp",
  "version": "0.5.1",
  "description": "The official MCP Server for the Believe API",
  "author": {
    "name": "Believe",
    "email": "wave@cjav.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cjavdev/believe-typescript.git"
  },
  "homepage": "https://github.com/cjavdev/believe-typescript/tree/main/packages/mcp-server#readme",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "BELIEVE_API_KEY": "${user_config.BELIEVE_API_KEY}"
      }
    }
  },
  "user_config": {
    "BELIEVE_API_KEY": {
      "title": "api_key",
      "description": "",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
